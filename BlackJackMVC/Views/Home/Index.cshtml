@{
    ViewData["Title"] = "PlayGame";
}

<style>

    #btBet {
        background-color: gold; /* Green */
        border: double;
        color: blue;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 12px;
    }

    #btPlay {
        background-color: gold;
        border: double;
        shape-margin: initial;
        padding: 10px 10px;
        color: red;
        font: bolder;
    }

    .row {
        background-color: darkgreen;
    }

    label, .col-md-d, .col-sm-6, #bet {
        color: goldenrod;
    }
</style>


<hr />
<div>
    <img src="~/images/blackjack.jpg" width="800" height="300" alt="blackjack photo" />
</div>
<hr />
<div>
    <input id="btPlay" type="button" value="NewGame" onclick="location.href='@Url.Action("NewGame", "Home")'" />
</div>
<br />
<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <h3>Dealer Hand</h3>
            <div class="row">
                <div class="col-md-2 col-sm-3">
                    <img src="@TempData["dc1"]" class="img-responsive" />
                </div>
                <div class="col-md-2 col-sm-3">
                    <img src="@TempData["dc2"]" class="img-responsive" />
                </div>
                <div class="col-md-2 col-sm-3">
                    <img src="@TempData["dc3"]" class="img-responsive" />
                </div>
                <div class="col-md-2 col-sm-3">
                    <img src="@TempData["dc4"]" class="img-responsive" />
                </div>
                <div class="col-md-2 col-sm-3">
                    <img src="@TempData["dc5"]" class="img-responsive" />
                </div>
                <div class="col-md-2 col-sm-3">
                    <img src="@TempData["dc6"]" class="img-responsive" />
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <h3>Player Hand</h3>
            <div class="row">
                <div class="col-md-2 col-sm-3">
                    <img src="@TempData["mc1"]" class="img-responsive" />
                </div>
                <div class="col-md-2 col-sm-3">
                    <img src="@TempData["mc2"]" class="img-responsive" />
                </div>
                <div class="col-md-2 col-sm-3">
                    <img src="@TempData["mc3"]" class="img-responsive" />
                </div>
                <div class="col-md-2 col-sm-3">
                    <img src="@TempData["mc4"]" class="img-responsive" />
                </div>
                <div class="col-md-2 col-sm-3">
                    <img src="@TempData["mc5"]" class="img-responsive" />
                </div>
                <div class="col-md-2 col-sm-3">
                    <img src="@TempData["mc6"]" class="img-responsive" />
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div>
                <label>
                    My Account: $
                </label>
                <label>
                    @TempData["myAccount"]
                </label>
            </div>
            <div>
                <label>
                    My Bet: $
                </label>
                <label>
                    @TempData["myBet"]
                </label>
                <br /><br />
                <p id="bet">Place your bet with chips:</p>
                <input id="btBet" type="button" value="$1" onclick="location.href='@Url.Action("Bet1", "Home")'" />
                <input id="btBet" type="button" value="$10" onclick="location.href='@Url.Action("Bet10", "Home")'" />
                <input id="btBet" type="button" value="$25" onclick="location.href='@Url.Action("Bet25", "Home")'" />
                <input id="btBet" type="button" value="$50" onclick="location.href='@Url.Action("Bet50", "Home")'" />
                <input id="btBet" type="button" value="$100" onclick="location.href='@Url.Action("Bet100", "Home")'" />
                <input id="btBet" type="button" value="Bet All!!!" onclick="location.href='@Url.Action("BetAll", "Home")'" />
                <input id="btBet" type="button" value="Clear Bet!!!" onclick="location.href='@Url.Action("BetClear", "Home")'" />
            </div>
            <br />
            <div>

                <input id="btPlay" type="button" value="Hit" onclick="location.href='@Url.Action("Hit", "Home")'" />
                <input id="btPlay" type="button" value="Stand" onclick="location.href='@Url.Action("Stand", "Home")'" />
                <input id="btPlay" type="button" value="Deal" onclick="location.href='@Url.Action("Deal", "Home")'" />
            </div>
        </div>
        <div class="col-md-d">
            <h4>@TempData["resultMessage"]</h4>
            <h4>@TempData["alertMessage"]</h4>
        </div>
    </div>
</div>
@if (ViewBag.WarningMessage != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert("@ViewBag.WarningMessage");
        };
    </script>
}
<br />
<hr />